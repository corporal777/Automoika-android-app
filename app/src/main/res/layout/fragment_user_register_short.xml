<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <kg.autojuuguch.automoikakg.ui.views.ToolbarLayoutView
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:toolbarText="@string/register_text" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_app_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_login_info"
                style="@style/TextStyle.Semibold"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:letterSpacing="-0.02"
                android:text="@string/register_login_info_text"
                android:textColor="@color/app_main_color"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_first_name"
                style="@style/TextStyle.Title"
                android:layout_marginTop="30dp"
                android:text="@string/name_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_login_info" />

            <kg.autojuuguch.automoikakg.ui.views.CustomTextInputView
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:hint="@string/input_first_name_hint"
                app:inputId="@+id/til_first_name"
                app:layout_constraintTop_toBottomOf="@id/tv_first_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_login"
                style="@style/TextStyle.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_login_text"
                app:layout_constraintTop_toBottomOf="@id/et_first_name" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_login"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_min_height"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/tv_login">

                <kg.autojuuguch.automoikakg.ui.views.PhoneFormatEditText
                    android:id="@+id/et_login"
                    style="@style/SimpleEditTextStyle"
                    android:inputType="phone"
                    app:phoneHint="+996 508 138 691" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_password"
                style="@style/TextStyle.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/input_password_hint"
                app:layout_constraintTop_toBottomOf="@id/til_login" />

            <kg.autojuuguch.automoikakg.ui.views.PasswordView
                android:id="@+id/view_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/tv_password" />


            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/sc_agreement"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@drawable/ic_drawable_switch"
                app:layout_constraintBottom_toBottomOf="@id/tv_agreement"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_agreement" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_agreement"
                style="@style/TextStyle.Text"
                android:layout_width="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="@string/user_agreement_text"
                android:textColor="@color/black"
                android:textColorLink="@color/blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/tv_go_login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/sc_agreement"
                app:layout_constraintTop_toBottomOf="@id/view_password"
                app:layout_constraintVertical_chainStyle="spread_inside" />


            <TextView
                android:id="@+id/tv_go_login"
                style="@style/TextStyle.Bold"
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_background_text"
                android:letterSpacing="-0.02"
                android:text="Уже есть аккаунт"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/btn_continue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_agreement"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <kg.autojuuguch.automoikakg.ui.views.LoadingButton
                android:id="@+id/btn_continue"
                style="@style/BtnLoadingStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:buttonText="@string/register"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>