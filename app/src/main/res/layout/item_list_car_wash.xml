<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/car_wash_list_item_image_height"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/background_car_wash_list_item"
    android:clipToOutline="true"
    android:elevation="10dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/img_test" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/footer_gradient" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient_second" />

    <TextView
        android:id="@+id/tvCarWashName"
        style="@style/TextStyle.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:maxLines="2"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Автомойка - FormaCar" />


    <TextView
        android:id="@+id/tvCarWashAddress"
        style="@style/TextStyle.Semibold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxLines="2"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tvCarWashBoxes"
        app:layout_constraintTop_toBottomOf="@id/tvCarWashName"
        tools:text="Адрес : Молдокулова,60/1" />


    <TextView
        android:id="@+id/tvCarWashBoxes"
        style="@style/TextStyle.Semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:text="@string/text_boxes"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/ln_boxes" />


    <LinearLayout
        android:id="@+id/ln_boxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>