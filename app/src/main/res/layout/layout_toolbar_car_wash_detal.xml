<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tb_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_size"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tb_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_left"
        android:layout_width="0.5dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/back_mask"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_circle_background_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/toolbar_icons_size"
        android:layout_height="@dimen/toolbar_icons_size"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/btn_background_toolbar"
        android:padding="2dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/like_mask"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_circle_background_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        app:layout_constraintEnd_toEndOf="@id/iv_like"
        app:layout_constraintStart_toStartOf="@id/iv_like"
        app:layout_constraintTop_toTopOf="@id/iv_like" />


    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="@dimen/toolbar_icons_size"
        android:layout_height="@dimen/toolbar_icons_size"
        android:layout_marginEnd="15dp"
        android:background="@drawable/btn_background_toolbar"
        android:paddingHorizontal="4dp"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        android:src="@drawable/ic_like"
        app:layout_constraintBottom_toBottomOf="@id/iv_share"
        app:layout_constraintEnd_toStartOf="@id/iv_share"
        app:layout_constraintTop_toTopOf="@id/iv_share"
        app:tint="@color/white" />


    <View
        android:id="@+id/share_mask"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/btn_circle_background_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/iv_share"
        app:layout_constraintEnd_toEndOf="@id/iv_share"
        app:layout_constraintStart_toStartOf="@id/iv_share"
        app:layout_constraintTop_toTopOf="@id/iv_share" />


    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/toolbar_icons_size"
        android:layout_height="@dimen/toolbar_icons_size"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/btn_background_toolbar"
        android:padding="5dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

    <View
        android:id="@+id/view_right"
        android:layout_width="0.5dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>