<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_background_text"
    android:minHeight="50dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_variant"
        style="@style/TextStyle.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/variants_text" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/sc_variant"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:enabled="false"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default"
        android:button="@drawable/ic_drawable_switch"
        app:layout_constraintBottom_toBottomOf="@id/tv_variant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_variant"
        tools:checked="true" />

</androidx.constraintlayout.widget.ConstraintLayout>