<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default"
            android:layout_marginTop="5dp">

            <kg.autojuuguch.automoikakg.ui.views.AvatarView
                android:id="@+id/viewAvatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/bottom_navigation_bar_color"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/tvName"
                style="@style/TextStyle.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:letterSpacing="-0.02"
                android:maxLines="2"
                android:textColor="@color/app_main_color"
                android:textSize="21sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/tvCity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewAvatar"
                app:layout_constraintTop_toTopOf="@+id/viewAvatar"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="@tools:sample/full_names" />


            <TextView
                android:id="@+id/tvCity"
                style="@style/TextStyle.Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_main_color"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/viewAvatar"
                app:layout_constraintStart_toEndOf="@id/viewAvatar"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                tools:text="г. Бишкек" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:shimmer_duration="1500"
            tools:visibility="visible">

            <include layout="@layout/layout_profile_header_placeholder" />
        </com.facebook.shimmer.ShimmerFrameLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChangeCity"
            style="@style/ButtonStyle.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default"
            android:layout_marginVertical="@dimen/margin_ten"
            android:minHeight="35dp"
            android:text="@string/change_city"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/input_unfocused_background" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSettings"
            style="@style/TextStyle.ButtonPages"
            android:layout_marginTop="20dp"
            android:text="@string/profile_settings"
            app:drawableStartCompat="@drawable/ic_profile_settings" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReviews"
            style="@style/TextStyle.ButtonPages"
            android:layout_marginTop="15dp"
            android:text="@string/my_reviews"
            app:drawableStartCompat="@drawable/ic_profile_reviews" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLike"
            style="@style/TextStyle.ButtonPages"
            android:layout_marginTop="15dp"
            android:text="@string/like_app"
            app:drawableStartCompat="@drawable/ic_profile_like" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLetter"
            style="@style/TextStyle.ButtonPages"
            android:layout_marginTop="15dp"
            android:text="@string/letter_developers"
            app:drawableStartCompat="@drawable/ic_profile_letter" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAboutApp"
            style="@style/TextStyle.ButtonPages"
            android:layout_marginTop="15dp"
            android:text="@string/about_app"
            app:drawableStartCompat="@drawable/ic_about_app" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLogout"
            style="@style/TextStyle.ButtonPages"
            android:layout_marginTop="15dp"
            android:text="@string/profile_logout"
            app:drawableStartCompat="@drawable/ic_profile_exit" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>