<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <kg.autojuuguch.automoikakg.ui.views.ToolbarLayoutView
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:toolbarText="@string/register_text" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_toolbar">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ln_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_image"
                style="@style/TextStyle.Title"
                android:layout_marginTop="20dp"
                android:text="@string/image_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <kg.autojuuguch.automoikakg.ui.views.AvatarView
                android:id="@+id/cardAvatar"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_image"
                app:strokeColor="@color/input_title_text_color"
                app:strokeWidth="1dp" />


            <TextView
                android:id="@+id/tv_add_photo"
                style="@style/TextStyle.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_background_text"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.02"
                android:text="@string/add_image_text"
                android:textColor="@color/blue"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/cardAvatar"
                app:layout_constraintStart_toEndOf="@id/cardAvatar"
                app:layout_constraintTop_toTopOf="@id/cardAvatar" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_last_name"
                style="@style/TextStyle.Title"
                android:layout_marginTop="30dp"
                android:text="@string/last_name_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardAvatar" />

            <kg.autojuuguch.automoikakg.ui.views.CustomTextInputView
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:hint="@string/input_last_name_hint"
                app:inputId="@+id/til_last_name"
                app:layout_constraintTop_toBottomOf="@id/tv_last_name" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_first_name"
                style="@style/TextStyle.Title"
                android:text="@string/name_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_last_name" />

            <kg.autojuuguch.automoikakg.ui.views.CustomTextInputView
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:hint="@string/input_first_name_hint"
                app:inputId="@+id/til_first_name"
                app:layout_constraintTop_toBottomOf="@id/tv_first_name" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_city"
                style="@style/TextStyle.Title"
                android:text="@string/name_city"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_first_name" />

            <kg.autojuuguch.automoikakg.ui.views.CustomTextInputView
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:hint="@string/input_city_hint"
                app:inputId="@+id/til_city"
                app:layout_constraintTop_toBottomOf="@id/tv_city" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_phone"
                style="@style/TextStyle.Title"
                android:text="@string/phone_login_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_city" />

            <FrameLayout
                android:id="@+id/til_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/background_input_normal"
                app:layout_constraintTop_toBottomOf="@id/tv_phone">

                <kg.autojuuguch.automoikakg.ui.views.PhoneFormatEditText
                    android:id="@+id/et_phone"
                    style="@style/SimpleEditTextStyle"
                    android:inputType="phone"
                    app:phoneHint="@string/enter_phone_text" />
            </FrameLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_password"
                style="@style/TextStyle.Title"
                android:text="@string/input_password_hint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_phone" />


            <kg.autojuuguch.automoikakg.ui.views.PasswordView
                android:id="@+id/view_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/tv_password" />


            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/sc_agreement"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@drawable/ic_drawable_switch"
                app:layout_constraintBottom_toBottomOf="@id/tv_agreement"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_agreement" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_agreement"
                style="@style/TextStyle.Text"
                android:layout_width="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="@string/user_agreement_text"
                android:textColor="@color/black"
                android:textColorLink="@color/blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/btnRegister"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/sc_agreement"
                app:layout_constraintTop_toBottomOf="@id/view_password"
                app:layout_constraintVertical_chainStyle="spread_inside" />


            <kg.autojuuguch.automoikakg.ui.views.LoadingButton
                android:id="@+id/btnRegister"
                style="@style/BtnLoadingStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                app:buttonText="@string/register"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_agreement"
                app:layout_constraintVertical_chainStyle="spread_inside" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>