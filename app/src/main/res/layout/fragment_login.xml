<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <kg.autojuuguch.automoikakg.ui.views.ToolbarLayoutView
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:toolbarText="@string/auth_text" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ln_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default">


            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_app_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_login_info"
                style="@style/TextStyle.Semibold"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:letterSpacing="-0.02"
                android:text="@string/login_info_title_text"
                android:textColor="@color/app_main_color"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_login_title"
                style="@style/TextStyle.Title"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:text="@string/login_text"
                app:layout_constraintTop_toBottomOf="@id/tv_login_info" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_login"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_min_height"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/tv_login_title">

                <kg.autojuuguch.automoikakg.ui.views.PhoneFormatEditText
                    android:id="@+id/et_login"
                    style="@style/SimpleEditTextStyle"
                    android:inputType="phone"
                    app:phoneHint="@string/enter_phone_text" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_password_title"
                style="@style/TextStyle.Title"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="@string/input_password_hint"
                app:layout_constraintTop_toBottomOf="@id/til_login" />

            <kg.autojuuguch.automoikakg.ui.views.CustomTextInputView
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:hint="*****"
                app:inputId="@+id/til_password"
                app:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@id/tv_password_title" />


            <kg.autojuuguch.automoikakg.ui.views.LoadingButton
                android:id="@+id/btn_login"
                style="@style/BtnLoadingStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:buttonText="@string/login"
                app:layout_constraintTop_toBottomOf="@id/et_password" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>