<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomProgressBar">
        <attr name="progressSize" format="dimension" />
        <attr name="progressStroke" format="integer" />
        <attr name="progressColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="LoadingButton">
        <attr name="buttonBackground" format="reference" />
        <attr name="buttonTextColor" format="reference" />
        <attr name="buttonMinHeight" format="dimension"/>
        <attr name="buttonPaddingHorizontal" format="dimension"/>
        <attr name="buttonTextSize" format="dimension" />
        <attr name="buttonText" format="string" />
        <attr name="buttonDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="PhoneFormatEditText">
        <attr name="phoneHint" format="string" />
    </declare-styleable>

    <declare-styleable name="CodeConfirmationView">
        <attr name="codeViewTextSize" format="dimension"/>
        <attr name="codeViewHeight" format="dimension" />
        <attr name="codeViewWidth" format="dimension" />
        <attr name="codeViewSpace" format="dimension" />
        <attr name="codeViewLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="ToolbarLayoutView">
        <attr name="toolbarTextSize" format="dimension" />
        <attr name="toolbarText" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomCropView">
        <attr name="guidelines">
            <enum name="on" value="2"/>
            <enum name="onTouch" value="1"/>
            <enum name="off" value="0"/>
        </attr>
        <attr name="fixAspectRatio" format="boolean"/>
        <attr name="aspectRatioX" format="integer"/>
        <attr name="aspectRatioY" format= "integer"/>
        <attr name="imageResource" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomTextInputView">
        <attr name="hint" format="string" />
        <attr name="inputType">
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001" />
            <flag name="textCapSentences" value="0x00004001" />
            <flag name="textMultiLine" value="0x00020001" />
            <flag name="textNoSuggestions" value="0x00080001" />
            <flag name="textEmailAddress" value="0x00000021" />
            <flag name="textPassword" value="0x00000081" />
            <flag name="number" value="0x00000002" />
            <flag name="phone" value="0x00000003" />
        </attr>
        <attr name="maxLines" format="integer" />
        <attr name="minLines" format="integer" />
        <attr name="inputEnabled" format="boolean" />
        <attr name="textColor" format="reference" />
        <attr name="inputId" format="reference" />
    </declare-styleable>
</resources>